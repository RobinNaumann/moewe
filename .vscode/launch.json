  "version": "0.2.0",
  "configurations": [
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Server [debug]",
      "program": "${workspaceFolder}/moewe_server/index.ts",
      "cwd": "${workspaceFolder}/moewe_server",
      "stopOnEntry": false,
      "watchMode": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "studio [debug]",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["vite", "serve"],
      "cwd": "${workspaceFolder}/studio"
    }
  ]
}
